<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ttl_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/input_ttl"
                android:importantForAutofill="no"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ttl_apply"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:text="@string/ttl_apply" />

                <Button
                    android:id="@+id/ttl_restore"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ttl_restore" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ttl_show"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="5dp"
            android:text="@string/ttl_default_show" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>